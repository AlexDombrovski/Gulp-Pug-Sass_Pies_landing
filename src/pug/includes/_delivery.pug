//- начало компонента
.container-fluid.delivery-wrapper
  .container.delivery-cont
    .delivery-stickers
      .delivery-sticker-delivery.active Доставка
      .delivery-sticker-price Стоимость
    .delivery-delivery.active
      .delivery-first
        +delivery-description
      .delivery-second
        +delivery-adresses
    .delivery-price.hidden
      .delivery-price-first
        +delivery-price
    .delivery-action